<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2주차 학습 내용"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple_List1"
        android:id="@+id/main_button_simple_list1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple_List2"
        android:id="@+id/main_button_simple_list2"
        android:layout_below="@+id/main_button_simple_list1"
        android:layout_alignLeft="@+id/main_button_simple_list1"
        android:layout_alignStart="@+id/main_button_simple_list1"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom_List"
        android:id="@+id/main_button_custom_list"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/main_button_simple_list2"
        android:layout_alignLeft="@+id/main_button_simple_list2"
        android:layout_alignStart="@+id/main_button_simple_list2" />
</RelativeLayout>
