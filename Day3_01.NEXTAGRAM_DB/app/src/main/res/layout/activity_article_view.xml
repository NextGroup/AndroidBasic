<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nhnnext.day2_02nextagram_intent.ArticleView"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/activity_article_view_textView_writer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="글쓴이"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#317092"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_article_view_textView_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="작성시각"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#bbbbbb" />
    </LinearLayout>

    <ImageView
        android:id="@+id/activity_article_view_imageView_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:minHeight="200dp"
        android:src="@drawable/dummy" />

    <TextView
        android:id="@+id/activity_article_view_textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="제  목"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/activity_article_view_textView_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="본문 내용"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#bbbbbb" />
</LinearLayout>
